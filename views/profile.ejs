<%-include("./partials/header.ejs")%>

<div class="h-screen bg-gray-100 overflow-auto">
  <%-include("./partials/nav.ejs")%>

  <div class="flex justify-center items-start py-12 px-4 sm:px-8">
    <!-- Left Sidebar: User Info & Actions -->
    <div class="w-full sm:w-1/4 bg-white shadow-lg rounded-lg mx-5 p-6">
      <div class="flex justify-center mb-8">
        <img
          class="h-32 w-32 rounded-full border-4 border-gray-300"
          src="<%=user.avatar.url%>"
          alt="User Avatar"
        />
      </div>

      <h3 class="text-center text-xl font-semibold text-gray-800 mb-6"><%=user.username%></h3>

      <!-- Sidebar Links -->
      <div class="space-y-6">
        <div class="flex items-center gap-3 text-gray-600 hover:text-blue-500 cursor-pointer">
          <img class="h-6" src="https://cdn-icons-png.flaticon.com/128/6066/6066733.png" alt="Icon">
          <a href="/user/resetpassword">Reset Password</a>
        </div>
        <div class="flex items-center gap-3 text-gray-600 hover:text-blue-500 cursor-pointer">
          <img class="h-6" src="https://cdn-icons-png.flaticon.com/128/11121/11121550.png" alt="Icon">
          <a href="/user/update">Update User Details</a>
        </div>
        <div class="flex items-center gap-3 text-gray-600 hover:text-blue-500 cursor-pointer">
          <img class="h-6" src="https://cdn-icons-png.flaticon.com/128/14723/14723973.png" alt="Icon">
          <a href="/user/deleteaccount">Delete Account</a>
        </div>
        <div class="flex items-center gap-3 mt-10 text-gray-600 hover:text-blue-500 cursor-pointer">
          <img class="h-6" src="https://cdn-icons-png.flaticon.com/128/10313/10313098.png" alt="Icon">
          <a href="/user/signout">Logout</a>
        </div>
      </div>
    </div>

    <!-- Right Section: User Details -->
    <div class="w-full sm:w-3/4 bg-white shadow-lg rounded-lg p-8 mx-5">
      <h1 class="text-3xl font-semibold text-gray-800 text-center mb-10">User Profile</h1>

      <!-- Profile Image -->
      <div class="flex justify-center mb-10">
        <img
          class="h-40 w-40 object-cover rounded-full border-4 border-gray-300"
          src="<%=user.avatar.url%>"
          alt="Profile Image"
        />
      </div>

      <!-- User Info -->
      <div class="space-y-6">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-3 w-fit bg-gradient-to-r from-indigo-600 to-purple-500 text-white rounded-lg p-3">
            <img class="h-8 w-8" src="https://cdn-icons-png.flaticon.com/128/8392/8392494.png" alt="ID Icon">
            <p class="font-semibold">ID: <%=user._id%></p>
          </div>
          <div class="flex items-center gap-3 w-fit bg-gradient-to-r from-indigo-600 to-purple-500 text-white rounded-lg p-3">
            <img class="h-8 w-8" src="https://cdn-icons-png.flaticon.com/128/5968/5968534.png" alt="Email Icon">
            <p class="font-semibold">Email: <%=user.email%></p>
          </div>
        </div>

        <div class="flex justify-between items-center">
          <div class="flex items-center gap-3 w-fit bg-gradient-to-r from-indigo-600 to-purple-500 text-white rounded-lg p-3">
            <img class="h-8 w-8" src="https://cdn-icons-png.flaticon.com/128/17548/17548979.png" alt="Created Icon">
            <p class="font-semibold">Created: <%=user.createdAt%></p>
          </div>
          <div class="flex items-center gap-3 w-fit bg-gradient-to-r from-indigo-600 to-purple-500 text-white rounded-lg p-3">
            <img class="h-8 w-8" src="https://cdn-icons-png.flaticon.com/128/16877/16877729.png" alt="Updated Icon">
            <p class="font-semibold">Updated: <%=user.updatedAt%></p>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<%-include("./partials/footer.ejs")%>
