<%-include("./partials/header.ejs")%>
<div class="w-screen bg-gray-200">
  <%-include("./partials/nav.ejs")%>
  <div class="flex w-full">
    <form
      class="w-2/3 px-20 py-6 rounded shadow opacity-80 bg-white text-center"
      action="/expense/create"
      method="post"
    >
      <h1 class="text-3xl font-semibold mb-10">Manage Your Bills</h1>

      <!-- Title Input -->
      <input
        class="w-3/4 border-2 border-gray-600 rounded-full px-5 py-2 my-3"
        type="text"
        name="title"
        placeholder="Title"
      />

      <!-- Amount Input -->
      <input
        class="w-3/4 border-2 border-gray-600 rounded-full px-5 py-2 my-3"
        type="number"
        name="amount"
        placeholder="Amount"
      />

      <!-- Category Input -->
      <input
        class="w-3/4 border-2 border-gray-600 rounded-full px-5 py-2 my-3"
        type="text"
        name="category"
        placeholder="Category"
      />

      <!-- Remark Input -->
      <input
        class="w-3/4 border-2 border-gray-600 rounded-full px-5 py-2 my-3"
        type="text"
        name="remark"
        placeholder="Remark"
      />

      <!-- Payment Mode Dropdown -->
      <select
        class="w-3/4 border-2 border-gray-600 rounded-full px-5 py-2 my-3"
        name="paymentmode"
        required
      >
        <option value="" disabled selected>Select Payment Mode</option>
        <option value="Cash">Cash</option>
        <option value="UPI">UPI</option>
        <option value="Cheque">Cheque</option>
        <option value="Card">Card</option>
      </select>

      <!-- Submit Button -->
      <button class="bg-gradient-to-r from-blue-400 to-blue-600 text-white px-20 py-2 rounded-full mt-10">
        Add Bills
      </button>
    </form>

    <div class="h-full">
      <img class="h-full object-cover" src="/images/sideimage4.jpg" alt="">
    </div>
  </div>
</div>
<%-include("./partials/footer.ejs")%>
