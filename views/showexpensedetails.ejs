<%-include("./partials/header.ejs")%>
<div class="h-screen w-screen bg-gray-100">
    <%-include("./partials/nav.ejs")%>

    <div class="flex">
        <!-- Sidebar Section -->
        <div class="sidebar w-1/4 bg-gray-200 px-5 py-10  hidden lg:block">
            <img class="h-20 w-20 mx-auto" src="https://cdn-icons-png.flaticon.com/256/4982/4982416.png" alt="Logo" />
            <h3 class="my-7 mb-10 text-center text-xl font-semibold">Hello, <%= user.username %>!</h3>

            <div class="flex items-center gap-2 my-10">
                <img class="h-5" src="https://cdn-icons-png.flaticon.com/128/6066/6066733.png" alt="" />
                <a href="/user/resetpassword" class="text-sm">Reset Password</a>
            </div>

            <div class="flex items-center gap-2 my-10">
                <img class="h-5" src="https://cdn-icons-png.flaticon.com/128/11121/11121550.png" alt="" />
                <a href="/user/update" class="text-sm">Update User Details</a>
            </div>

            <div class="flex items-center gap-2 my-10">
                <img class="h-5" src="https://cdn-icons-png.flaticon.com/128/14723/14723973.png" alt="" />
                <a href="/user/deleteaccount" class="text-sm">Delete Account</a>
            </div>

            <div class="flex items-center gap-2 my-10">
                <img class="h-5" src="https://cdn-icons-png.flaticon.com/128/10313/10313098.png" alt="" />
                <a href="/user/signout" class="text-sm">Logout</a>
            </div>
        </div>

        <!-- Expense Details Section -->
        <div class="w-3/4 px-10 py-8 bg-white">
            <h1 class="text-3xl font-bold mb-6 text-gray-800">Your Bill's Details</h1>
            <p class="text-gray-600 mb-10 border-b-2 pb-4">Effortlessly manage your transactionsâ€”view, edit, and organize your Bills with added features like receipts, notes, and category tags. Stay on top of every financial detail.</p>

            <!-- Expense Details Box -->
            <div class="w-full bg-white p-8 rounded-lg shadow-lg">
                <div class="flex flex-col space-y-4">
                    <div class="flex justify-between">
                        <span class="font-medium text-gray-800 text-lg">Title:</span>
                        <span class="text-gray-600 text-lg"><%= expenseDet.title %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="font-medium text-gray-800 text-lg">Amount:</span>
                        <span class="text-gray-600 text-lg"><%= expenseDet.amount %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="font-medium text-gray-800 text-lg">Category:</span>
                        <span class="text-gray-600 text-lg"><%= expenseDet.category %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="font-medium text-gray-800 text-lg">Remark:</span>
                        <span class="text-gray-600 text-lg"><%= expenseDet.remark %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="font-medium text-gray-800 text-lg">Payment Mode:</span>
                        <span class="text-gray-600 text-lg"><%= expenseDet.paymentmode %></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-between items-center mt-6">
                    <a href="/expense/update/<%= expenseDet._id %>" class="text-white bg-blue-600 px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                        Edit
                    </a>
                    <a href="/expense/delete/<%= expenseDet._id %>" class="text-white bg-red-600 px-6 py-2 rounded-lg hover:bg-red-700 transition duration-300">
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include("./partials/footer.ejs")%>
