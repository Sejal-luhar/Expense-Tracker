<%-include("./partials/header.ejs")%>

<div class="h-screen w-screen bg-gray-100 text-center">

  <%-include("./partials/nav.ejs")%>

  <div class="w-full sm:w-96 mx-auto bg-white mt-10 p-8 rounded-lg shadow-xl">
    <div class="flex justify-center mb-8">
      <img class="h-20 w-20" src="https://cdn-icons-png.flaticon.com/128/6236/6236379.png" alt="Reset Icon">
    </div>

    <h1 class="text-3xl font-semibold text-gray-800 mb-4">Reset Your Password</h1>
    <p class="text-gray-500 mb-6">Enter a new password below to change your password.</p>

    <form class="space-y-4" action="/user/resetpassword" method="post">
      <!-- Old Password Input -->
      <div class="w-full">
        <input 
          class="w-full px-5 py-2 border-2 border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="password" 
          name="oldpassword" 
          placeholder="Old Password"
          required 
        />
      </div>

      <!-- New Password Input -->
      <div class="w-full">
        <input 
          class="w-full px-5 py-2 border-2 border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="password" 
          name="newpassword" 
          placeholder="New Password"
          required 
        />
      </div>

      <!-- Reset Password Button -->
      <button 
        class="w-full bg-gradient-to-r from-blue-400 to-blue-600 text-white py-3 rounded-full mt-6 hover:bg-gray-800 transition-all"
        type="submit"
      >
        Reset Password
      </button>
    </form>
  </div>
</div>

<%-include("./partials/footer.ejs")%>
