<%- include("./partials/header.ejs") %>

<div class="h-screen w-screen bg-gradient-to-b from-gray-200 to-gray-300">
  <%- include("./partials/nav.ejs") %>
  <h1 class="text-3xl font-semibold text-center text-white my-10">
    Bill Buddy | User Login
  </h1>
  <div class="w-full max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
    <form class="space-y-6" action="/user/signin" method="post">
      <input
        class="w-full border-2 border-gray-300 rounded-3xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="w-full border-2 border-gray-300 rounded-3xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
        type="password"
        name="password"
        placeholder="Password"
      />
      <p class="text-center">
        <a class="text-blue-600 text-sm" href="/user/forget-password">Forgot Password?</a>
      </p>
      <button 
        class="w-full px-7 py-3 bg-gradient-to-r from-blue-400 to-blue-600 text-white rounded-3xl text-lg font-semibold hover:opacity-90 transition duration-200">
        Sign In
      </button>
    </form>

    <p class="text-center text-sm mt-4">
      Don't have an account? 
      <a class="text-blue-600" href="/user/singnup">Register Now</a>
    </p>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
