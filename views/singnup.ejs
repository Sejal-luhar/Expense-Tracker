<%- include("./partials/header.ejs") %>

<div class="h-screen w-screen bg-gradient-to-b from-gray-200 to-gray-300">
  <%- include("./partials/nav.ejs") %>
  <h1 class="text-3xl font-semibold text-center text-white my-6">
    Bill Buddy | User Registration
  </h1>
  
  <div class="w-full max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
    <form class="space-y-6" action="/user/singnup" method="post">
      
      <!-- Google Signup Button -->
      <div class="flex items-center justify-center mb-6">
        <a href="/user/auth/google" class="flex items-center justify-center w-full py-2 px-5 rounded-full hover:bg-red-600 transition duration-200">
          <span>Signup with Google</span>
          <img class="h-6 ml-3" src="https://cdn-icons-png.flaticon.com/128/300/300221.png" alt="Google Icon" />
        </a>
      </div>

      <!-- Username Input -->
      <input
        class="w-full border-2 border-gray-300 rounded-3xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
        type="text"
        name="username"
        placeholder="johndoe"
      />

      <!-- Email Input -->
      <input
        class="w-full border-2 border-gray-300 rounded-3xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
        type="email"
        name="email"
        placeholder="john@doe.com"
      />

      <!-- Password Input -->
      <input
        class="w-full border-2 border-gray-300 rounded-3xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
        type="password"
        name="password"
        placeholder="********"
      />

      <!-- Signup Button -->
      <button class="w-full px-7 py-3 bg-gradient-to-r from-blue-400 to-blue-600 text-white rounded-3xl text-lg font-semibold hover:opacity-90 transition duration-200">
        Signup User
      </button>
    </form>

    <p class="text-center text-sm mt-4">
      Already have an account? 
      <a class="text-blue-600" href="/user/signin">Sign In</a>
    </p>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
